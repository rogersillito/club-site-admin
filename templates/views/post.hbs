<div class="row">
	<div class="col-xs-6">
			<p><a href="/posts/{{data.category}}">&larr; back to the list of posts</a>
	</div>
	<div class="col-xs-6 text-right">
											<span className="pull-right text-muted margin-left-md">Published: {{data.post.publishedDateString}}</span></p>
				<p class="lead text-muted">
					{{{categoryList data.post.categories prefix="Posted in "}}}
					{{#if author.name.first}}by {{author.name.first}}{{/if}}
				</p>
	</div>
	<div class="col-xs-12">
		<hr />
	</div>
	<div class="col-sm-9 col-md-10 col-lg-9 margin-bottom-lg">
		<article>
			<div class="post">
				{{{data.post.content.extended}}}
			</div>
		</article>
	</div>
	<div class="col-sm-3 col-md-2 col-lg-3">
		<div class="row">
	  {{#each data.images}}
			<div class="col-xs-6 col-sm-12 margin-bottom-lg">
				<a href="{{large}}" data-toggle="lightbox" data-gallery="page.slug" data-type="image">
					<img src="{{thumbnail}}" class="img img-responsive img-thumbnail">
				</a>
			</div>
		{{/each}}
		</div>
	</div>
	</div>
</div>
